<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tuba.patienttrackingsystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
        <activity
            android:name=".PatientActivity"
            android:label="@string/title_activity_patient"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DoctorActivity"
            android:label="@string/title_activity_doctor"
            android:theme="@style/AppTheme" />
        <activity android:name=".PatientDiseaseActivity" />
        <activity
            android:name=".DoctorQrActivity"
            android:label="@string/title_activity_doctor_qr"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DoctorAppointmentsActivity"
            android:label="@string/title_activity_doctor_appointments"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DoctorSettingsActivity"
            android:label="@string/title_activity_doctor_settings"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>