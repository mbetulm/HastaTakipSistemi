<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@string/settingsText"
            android:layout_marginBottom="12sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normalTextSize"
            android:text="Patient's Personal Data"
            android:layout_marginBottom="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_selectedpatientName"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_selectedpatientGender"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_selectedpatientDateOfBirth"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/txt_selectedpatientGender"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_selectedpatientHeight"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_selectedpatientWeight"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/txt_selectedpatientHeight"/>
            </RelativeLayout>




        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normalTextSize"
            android:text="@string/valuesToTrack"
            android:layout_marginBottom="12sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/imageViewTrend"
                android:layout_gravity="center"
                android:src="@drawable/ic_bloodpressure"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginRight="5sp"
                android:layout_marginEnd="5sp" />

            <TextView
                android:id="@+id/textViewBloodPressure"
                android:layout_gravity="center"
                android:layout_width="220sp"
                android:layout_height="wrap_content"
                android:text="BLOOD PRESSURE"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkboxBloodPressure"
                android:layout_gravity="center"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:checked="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:contentDescription="@string/imageViewTrend"
                android:layout_gravity="center"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginRight="5sp"
                android:src="@drawable/blood_sugar"
                android:layout_marginEnd="5sp" />

            <TextView
                android:id="@+id/textViewBloodSugar"
                android:layout_gravity="center"
                android:layout_width="220sp"
                android:layout_height="wrap_content"
                android:text="BLOOD SUGAR"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkboxBloodSugar"
                android:layout_gravity="center"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:checked="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:contentDescription="@string/imageViewTrend"
                android:layout_gravity="center"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginRight="5sp"
                android:src="@drawable/ic_heartrate"
                android:layout_marginEnd="5sp" />

            <TextView
                android:id="@+id/textViewHeartRate"
                android:layout_gravity="center"
                android:layout_width="220sp"
                android:layout_height="wrap_content"
                android:text="HEART RATE"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkboxHeartRate"
                android:layout_gravity="center"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:checked="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:contentDescription="@string/imageViewTrend"
                android:layout_gravity="center"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginRight="5sp"
                android:src="@drawable/scales"
                android:layout_marginEnd="5sp" />

            <TextView
                android:id="@+id/textViewWeight"
                android:layout_gravity="center"
                android:layout_width="220sp"
                android:layout_height="wrap_content"
                android:text="WEIGHT"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkboxWeight"
                android:layout_gravity="center"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:checked="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:contentDescription="@string/imageViewTrend"
                android:layout_gravity="center"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginRight="5sp"
                android:src="@drawable/allergies"
                android:layout_marginEnd="5sp" />

            <TextView
                android:id="@+id/textViewAllergies"
                android:layout_gravity="center"
                android:layout_width="220sp"
                android:layout_height="wrap_content"
                android:text="ALLERGY"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkboxAllergy"
                android:layout_gravity="center"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:checked="false"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Track Time:"
            android:textSize="18sp"
            android:layout_marginBottom="12sp"/>

        <RadioGroup
            android:id="@+id/durationRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/duration7"
                android:text="7 days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/duration15"
                android:text="15 days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/duration30"
                android:text="30 days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>

        </RadioGroup>

        <Button
            android:text="@string/action_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSubmitData"
            android:layout_marginTop="16dp"
            android:background="#ef5350"/>

    </LinearLayout>



</RelativeLayout>

