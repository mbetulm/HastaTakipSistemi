<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tuba.patienttrackingsystem.DoctorShowGraphActivity"
    android:orientation="vertical">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morning Value"
            android:layout_marginBottom="5dp"
            />

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:id="@+id/graphProgression1"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afternoon Value"
            android:layout_marginBottom="5dp"/>
        <com.jjoe64.graphview.GraphView
            android:id="@+id/graphProgression2"
            android:layout_width="wrap_content"
            android:layout_height="200sp"
            android:layout_marginLeft="5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evening Value"
            android:layout_marginBottom="5dp"/>

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graphProgression3"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="50dp"/>

    </LinearLayout>



</ScrollView>
</LinearLayout>
